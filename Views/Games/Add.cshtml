@model AddGameFormModel

@{ 
    ViewData["Title"] = "Add Game";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h1 class="heading-margin text-center">Add Game</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Insert game name here">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Insert game price here">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Developer"></label>
                    <input asp-for="Developer" class="form-control" placeholder="Insert developer here">
                    <span asp-validation-for="Developer" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Goat simulator is the dream game for goat enthusiasts"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReleaseYear"></label>
                    <input asp-for="ReleaseYear" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="ReleaseYear" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Insert image url">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreId"></label>
                    <select asp-for="GenreId" class="form-control" size="1">
                        @foreach (var genre in Model.Genres)
                         {
                            <option value="@genre.Id">@genre.Name</option>
                         }
                    </select>
                </div>
                <input class="btn btn-primary" type="submit" value="Add">
            </form>
        </div>
    </div>
</div>