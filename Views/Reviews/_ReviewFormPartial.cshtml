@model ReviewFormModel

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h1 class="heading-margin text-center">Add Review</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <input asp-for="Content" class="form-control" placeholder="Insert content">
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StarCount"></label>
                    <select asp-for="StarCount" class="form-control" size="1">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    <span asp-validation-for="StarCount" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>